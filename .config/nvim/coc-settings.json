{
  "coc.preferences.formatOnSaveFiletypes": [ "hs", "hls", "haskell" ],
  "languageserver": {
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "rootPatterns": [
        "hie.yaml",
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml"
      ],
      "filetypes": [
        "hs",
        "lhs",
        "haskell"
      ],
      "initializationOptions": {
        "haskell": {
          "formattingProvider": "stylish-haskell"
        }
      }
    }
  }
}
