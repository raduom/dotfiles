{
  "languageserver": {
    "haskell": {
      "command": "hie-wrapper",
      "args": [
        "--lsp"
      ],
      "rootPatterns": [
        "stack.yaml",
        "cabal.config",
        "package.yaml"
      ],
      "filetypes": [
        "hs",
        "lhs",
        "haskell"
      ],
      "initializationOptions": {
        "languageServerHaskell": {
          "hlintOn": true,
          "completionSnippetsOn": true
        }
      }
    }
  }
}
